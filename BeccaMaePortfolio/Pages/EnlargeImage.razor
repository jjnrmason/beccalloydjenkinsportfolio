@page "/enlarge/{ImagePath}"
@using System.Web

@code {
    [Parameter]
    public required string ImagePath { get; set; }

    private string DecodedImagePath => HttpUtility.UrlDecode(ImagePath);
}

<img src="@($"/images/{@DecodedImagePath}")" alt="Enlarged Image" style="max-width: 100%; height: auto;" />
