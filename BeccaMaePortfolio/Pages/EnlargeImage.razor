@page "/enlarge/{ImagePath}"
@using System.Web
@inject NavigationManager NavigationManager

<img src="@($"{baseUrl}images/{@DecodedImagePath}")" alt="Enlarged Image" style="max-width: 100%; height: auto;" />

@code {
    [Parameter]
    public required string ImagePath { get; set; }

    private string DecodedImagePath => HttpUtility.UrlDecode(ImagePath);
    private string baseUrl = "/";

    protected override void OnInitialized() {
        baseUrl = NavigationManager.BaseUri;
    }
}