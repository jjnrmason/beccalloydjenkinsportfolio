@inject NavigationManager NavigationManager

@* NavBar.razor *@
<nav class="bg-white text-black p-4">
    <div class="flex justify-between items-center items-center">
        <div class="text-lg font-bold">Becca Lloyd-Jenkins</div>
  
        <div class="hidden md:flex flex space-x-4">
            <a href="@baseUrl" class="hover:bg-gray-200 px-3 py-2 rounded-md text-lg">Home</a>
            <a href="@($"{baseUrl}about")" class="hover:bg-gray-200 px-3 py-2 rounded-md text-lg">About</a>
        </div>

        <!-- Hamburger Icon (Mobile) -->
        <div class="md:hidden">
            <button @onclick="ToggleMenu" class="text-black focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu (Hidden on large screens, visible on small screens) -->
    <div class="@mobileMenuClass">
        <a href="@baseUrl" class="block px-4 py-2 text-lg text-black hover:bg-gray-200">Home</a>
        <a href="@($"{baseUrl}about")" class="block px-4 py-2 text-lg text-black hover:bg-gray-200">About</a>
    </div>
</nav>

@code {
    private string baseUrl = "/";
    private bool isMenuOpen = false;

    protected override void OnInitialized()
    {
        baseUrl = NavigationManager.BaseUri;
    }

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }

    private string mobileMenuClass => isMenuOpen ? "block bg-white" : "hidden";
}
